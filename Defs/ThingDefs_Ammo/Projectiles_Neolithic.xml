<ThingDefs>

  <!-- ================== Crossbow bolt ================== -->

  <ThingDef Name="BaseboltProjectile" ParentName="BaseBullet">
    <graphicData>
      <texPath>Things/Projectile/crossbow_bolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <speed>70</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseboltProjectile">
    <defName>Projectile_bolt_Steel</defName>
    <label>Crossbow bolt (steel)</label>
    <projectile>
      <damageAmountBase>13</damageAmountBase>
			<armorPenetration>0.27</armorPenetration>
    </projectile>
  </ThingDef>
  
